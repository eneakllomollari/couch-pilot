# Smart Home Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# TV DEVICES (Required for TV control)
# =============================================================================
# JSON object mapping device IDs to their configuration
# Format: {"device_id": {"ip": "x.x.x.x", "port": 5555, "name": "Display Name"}}
TV_DEVICES='{"fire_tv": {"ip": "192.168.1.10", "port": 5555, "name": "Fire TV"}, "google_tv": {"ip": "192.168.1.108", "port": 5555, "name": "TCL Google TV"}}'

# =============================================================================
# TP-LINK TAPO (Optional - for smart bulb control)
# =============================================================================
# Your TP-Link/Tapo account credentials
TAPO_USERNAME=
TAPO_PASSWORD=

# Comma-separated list of Tapo bulb IP addresses
TAPO_BULB_IPS=192.168.1.29,192.168.1.90,192.168.1.135

# =============================================================================
# TUYA DEVICES (Optional)
# =============================================================================
# JSON object mapping device IDs to their Tuya credentials
# Get credentials from iot.tuya.com
# Format: {"device_id": {"id": "tuya_device_id", "key": "local_key"}}
TUYA_DEVICES='{}'

# =============================================================================
# VESYNC / LEVOIT (Optional - for air purifiers)
# =============================================================================
VESYNC_USERNAME=
VESYNC_PASSWORD=
